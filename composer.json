{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^8.3",
        "acquia/lightning": "^2.1.7",
        "wikimedia/composer-merge-plugin": "dev-master as 1.4.0",
        "drupal/migrate_plus": "^3.0-rc1",
        "drupal/migrate_tools": "~3",
        "drupal/migrate_source_csv": "~2",
        "drupal/acquia_connector": "^1.12.0",
        "oomphinc/composer-installers-extender": "^1.1"
    },
    "require-dev": {
        "geerlingguy/drupal-vm": "~4.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "extra": {
        "enable-patching": true,
        "patches": {
            "acquia/blt": {
                "run-server errors": "https://patch-diff.githubusercontent.com/raw/acquia/blt/pull/1798.patch"
            },
            "drupal/core": {
                "cm uninstall": "https://www.drupal.org/files/issues/drupal-2877119-2.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "require": [
                "vendor/acquia/blt/composer.required.json"
            ],
            "include": [
                "blt/composer.overrides.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": true
        }
    }
}
